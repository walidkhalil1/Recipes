<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_140sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_20sdp"
    android:outlineSpotShadowColor="@color/gray85">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            android:src="@color/black"
            android:id="@+id/iv_meal_item"/>

        <TextView
            android:text="Meal Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_meal_item"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:padding="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="@id/iv_meal_item"
            app:layout_constraintEnd_toEndOf="@id/iv_meal_item"
            app:layout_constraintTop_toBottomOf="@id/iv_meal_item"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>